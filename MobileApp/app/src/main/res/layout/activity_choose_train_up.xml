        <Button
            android:id="@+id/btn_train15"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:gravity="center"
            android:text="15"
            android:textColor="#090909"
            android:textSize="8sp" />

        <Button
            android:id="@+id/btn_train16"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:gravity="center"
            android:text="16"
            android:textColor="#090909"
            android:textSize="8sp" />

        <Button
            android:id="@+id/btn_train17"
            android:layout_width="30dp"
