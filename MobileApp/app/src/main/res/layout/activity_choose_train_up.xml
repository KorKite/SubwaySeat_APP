            android:gravity="center"
            android:text="11"
            android:textColor="#090909"
            android:textSize="8sp" />

        <Button
            android:id="@+id/btn_train12"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:gravity="center"
            android:text="12"
            android:textColor="#090909"
            android:textSize="8sp" />

        <Button
            android:id="@+id/btn_train13"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:gravity="center"
            android:text="13"
            android:textColor="#090909"
            android:textSize="8sp" />

        <Button
            android:id="@+id/btn_train14"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:gravity="center"
            android:text="14"
