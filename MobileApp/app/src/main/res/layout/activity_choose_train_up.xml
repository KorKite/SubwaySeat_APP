            android:gravity="center"
            android:text="5"
            android:textColor="#090909"
            android:textSize="8sp" />

        <Button
            android:id="@+id/btn_train6"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:gravity="center"
            android:text="6"
            android:textColor="#090909"
            android:textSize="8sp" />

        <Button
            android:id="@+id/btn_train7"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:gravity="center"
            android:text="7"
            android:textColor="#090909"
            android:textSize="8sp" />

        <Button
            android:id="@+id/btn_train8"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:gravity="center"
            android:text="8"
            android:textColor="#090909"
            android:textSize="8sp" />

        <Button
            android:id="@+id/btn_train9"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:gravity="center"
            android:text="9"
            android:textColor="#090909"
            android:textSize="8sp" />

        <Button
            android:id="@+id/btn_train10"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:gravity="center"
            android:text="10"
            android:textColor="#090909"
            android:textSize="8sp" />

        <Button
            android:id="@+id/btn_train11"
            android:layout_width="30dp"
