<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".inputDestination">

    <TextView
        android:id="@+id/tv_station_info2"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:text="지하철 호선을 선택해주세요"
        android:textColor="#0B0B0B"
        app:layout_constraintBottom_toTopOf="@+id/tv_line"
        app:layout_constraintStart_toStartOf="@+id/tv_line" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:background="#80CBC4"
        android:text="확인"
        app:layout_constraintStart_toStartOf="@+id/tv_station_dst"
        app:layout_constraintTop_toBottomOf="@+id/tv_station_dst" />

    <Spinner
        android:id="@+id/spn_station_dst"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:background="@drawable/spinner"
        app:layout_constraintStart_toStartOf="@+id/tv_station_dst"
        app:layout_constraintTop_toTopOf="@+id/tv_station_dst" />

    <Spinner
        android:id="@+id/spn_station_stt"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:background="@drawable/spinner"
        app:layout_constraintStart_toStartOf="@+id/spn_line"
        app:layout_constraintTop_toTopOf="@+id/tv_station_stt" />

    <Spinner
        android:id="@+id/spn_line"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:background="@drawable/spinner"
        app:layout_constraintStart_toStartOf="@+id/tv_line"
        app:layout_constraintTop_toTopOf="@+id/tv_line" />

    <TextView
        android:id="@+id/tv_station_dst"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginTop="60dp"
        android:background="@color/colorGray"
        android:ems="10"
        android:gravity="center_vertical"
        android:inputType="textPersonName"
        android:textColor="#090909"
        app:layout_constraintStart_toStartOf="@+id/tv_line"
        app:layout_constraintTop_toBottomOf="@+id/tv_station_stt" />

    <TextView
        android:id="@+id/tv_station_stt"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginTop="60dp"
        android:background="@color/colorGray"
        android:ems="10"
        android:gravity="center_vertical"
        android:inputType="textPersonName"
        android:textColor="#090909"
        app:layout_constraintStart_toStartOf="@+id/tv_line"
        app:layout_constraintTop_toBottomOf="@+id/tv_line" />

    <TextView
        android:id="@+id/tv_line"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="150dp"
        android:background="@color/colorGray"
        android:ems="10"
        android:gravity="center_vertical"
        android:inputType="textPersonName"
        android:textColor="#090909"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_station_info"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:text="도착역을 선택해주세요"
        android:textColor="#0B0B0B"
        app:layout_constraintBottom_toTopOf="@+id/tv_station_dst"
        app:layout_constraintStart_toStartOf="@+id/tv_station_dst" />

    <TextView
        android:id="@+id/tv_station_info1"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:text="출발역을 선택해주세요"
        android:textColor="#0B0B0B"
        app:layout_constraintBottom_toTopOf="@+id/spn_station_stt"
        app:layout_constraintStart_toStartOf="@+id/spn_line" />

</androidx.constraintlayout.widget.ConstraintLayout>